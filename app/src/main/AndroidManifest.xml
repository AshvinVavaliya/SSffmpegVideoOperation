<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.simform.videoimageeditor">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VideoImageEditor">
        <activity android:name=".processActivity.ExtractAudioActivity"></activity>
        <activity android:name=".processActivity.ExtractImagesActivity" />
        <activity android:name=".processActivity.CompressVideoActivity" />
        <activity android:name=".processActivity.CombineVideosActivity" />
        <activity android:name=".processActivity.CombineImagesActivity" />
        <activity android:name=".processActivity.CombineImageAndVideoActivity" />
        <activity android:name=".processActivity.AddWaterMarkOnVideoActivity" />
        <activity android:name=".processActivity.ImageToVideoConvertActivity" />
        <activity android:name=".processActivity.CutVideoUsingTimeActivity" />
        <activity android:name=".mainActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>